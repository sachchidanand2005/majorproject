<style>
  /* ---------------- Common Styles ---------------- */
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    width: 100%;
    max-width: 280px;
  }

  /* Airbnb-like round search bar */
  .search-bar {
    border: 1px solid #ddd;
    border-radius: 50px;
    display: flex;
    align-items: center;
    padding: 0.3rem 1rem;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }

  .search-bar:hover {
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
  }

  .search-bar span {
    font-size: 0.9rem;
    margin-right: 0.5rem;
    color: #333;
  }

  .search-bar i {
    color: #fe424d;
  }
  .btn-search{
    color: #fe424d;
  }


  /* Hide mobile elements by default */
  .mobile-top-search,
  .mobile-bottom-nav {
    display: none;
  }

  /* ---------------- Mobile View ---------------- */
  @media (max-width: 768px) {
    /* Hide desktop navbar */
    .desktop-navbar {
      display: none !important;
    }

    /* Fixed top search bar */
    .mobile-top-search {
      display: flex;
      align-items: center;
      justify-content: center;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: white;
      z-index: 1050;
      padding: 0.7rem 1rem;
      border-bottom: 1px solid #ddd;
    }

    .mobile-search-bar {
      width: 100%;
      border: 1px solid #ddd;
      border-radius: 50px;
      display: flex;
      align-items: center;
      padding: 0.5rem 1rem;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .mobile-search-bar input {
      border: none;
      outline: none;
      width: 100%;
      margin-left: 0.5rem;
      font-size: 0.9rem;
    }

    /* Fixed bottom icon navbar (always visible) */
    .mobile-bottom-nav {
      display: flex;
      justify-content: space-around;
      align-items: center;
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background: #fff;
      border-top: 1px solid #ddd;
      padding: 0.4rem 0;
      z-index: 1050;
      box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
    }

    .mobile-bottom-nav a {
      text-align: center;
      color: #666;
      font-size: 1.3rem;
      text-decoration: none;
    }

    .mobile-bottom-nav a span {
      display: block;
      font-size: 0.7rem;
      color: #666;
    }

    .mobile-bottom-nav a.active,
    .mobile-bottom-nav a:hover {
      color: #fe424d;
    }

    /* Add padding so content not hidden under bottom nav */
    body {
      padding-bottom: 70px;
      padding-top: 70px; /* space for top search bar */
    }
  }
</style>

<!-- ðŸ”¸ Desktop Navbar -->
